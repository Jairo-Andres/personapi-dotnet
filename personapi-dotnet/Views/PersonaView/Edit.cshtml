@model personapi_dotnet.Models.Entities.Persona

<h2>Editar Persona</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Cc" />

    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Apellido">Apellido</label>
        <input type="text" asp-for="Apellido" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Genero">Genero</label>
        <select asp-for="Genero" class="form-control">
            <option value="M">Masculino</option>
            <option value="F">Femenino</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Edad">Edad</label>
        <input type="number" asp-for="Edad" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a href="@Url.Action("Index", "PersonaView")" class="btn btn-secondary">Volver a la Lista</a>
</form>