@model personapi_dotnet.Models.Entities.Telefono

<h2>Editar Teléfono</h2>

<form asp-action="Edit" method="post" class="form-horizontal">
    <input type="hidden" asp-for="Num" />
    <div class="form-group">
        <label asp-for="Oper" class="control-label"></label>
        <input asp-for="Oper" class="form-control" />
        <span asp-validation-for="Oper" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Duenio" class="control-label"></label>
        <input asp-for="Duenio" class="form-control" type="number" />
        <span asp-validation-for="Duenio" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
