@model IEnumerable<personapi_dotnet.Models.Entities.Profesion>

<h2>Lista de Profesiones</h2>
<a asp-action="Create">Agregar Nueva Profesión</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var profesion in Model)
        {
            <tr>
                <td>@profesion.Id</td>
                <td>@profesion.Nom</td>
                <td>@profesion.Des</td>
                <td>
                    <a asp-action="Details" asp-route-id="@profesion.Id">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@profesion.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@profesion.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
